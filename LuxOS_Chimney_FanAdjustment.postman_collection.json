{
	"info": {
		"_postman_id": "5f71b7c3-191b-4ff4-9cf6-19aec94a82a0",
		"name": "LuxOS Fan Speed Adjustment",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "1454732"
	},
	"item": [
		{
			"name": "Logon",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.SESSION && jsonData.SESSION[0] && jsonData.SESSION[0].SessionID) {",
							"        pm.environment.set(\"SessionID\", jsonData.SESSION[0].SessionID);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"command\": \"logon\"}"
				},
				"url": {
					"raw": "http://{{MINER_IP}}:4028",
					"protocol": "http",
					"host": [
						"{{MINER_IP}}"
					],
					"port": "4028"
				}
			},
			"response": []
		},
		{
			"name": "Set Fan Speed",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"command\": \"fanset\", \"parameter\": \"{{SessionID}},power_off_speed=50\"}"
				},
				"url": {
					"raw": "http://{{MINER_IP}}:4028",
					"protocol": "http",
					"host": [
						"{{MINER_IP}}"
					],
					"port": "4028"
				}
			},
			"response": []
		},
		{
			"name": "Logoff",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\"command\": \"logoff\", \"parameter\": \"{{SessionID}}\"}"
				},
				"url": {
					"raw": "http://{{MINER_IP}}:4028",
					"protocol": "http",
					"host": [
						"{{MINER_IP}}"
					],
					"port": "4028"
				}
			},
			"response": []
		}
	]
}